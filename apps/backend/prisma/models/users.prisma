model Users {
    id         Int       @id @default(autoincrement())
    fullname   String
    username   String
    phone      String?   @unique
    photo      String?
    telegramId String?   @unique
    language   String    @default("uz")
    deletedAt  DateTime?

    orders       Order[]
    refreshToken RefreshToken[]

    createdAt  DateTime @default(now())
    updatedAt  DateTime @updatedAt

    @@index([deletedAt])
}
