{
  "name": "@jahonbozor/backend",
  "version": "1.0.50",
  "scripts": {
    "test": "bun --env-file=../../.env test",
    "test:watch": "bun --env-file=../../.env test --watch",
    "test:coverage": "bun --env-file=../../.env test --coverage",
    "dev": "bun --env-file=../../.env run --watch src/index.ts",
    "typecheck": "tsc --noEmit",
    "prisma:generate": "bun --env-file=../../.env x prisma generate",
    "prisma:seed": "bun --env-file=../../.env x prisma seed",
    "prisma:migrate": "bun --env-file=../../.env x prisma migrate dev",
    "prisma:studio": "bun --env-file=../../.env x prisma studio"
  },
  "dependencies": {
    "@elysiajs/bearer": "^1.4.2",
    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/jwt": "^1.4.0",
    "@elysiajs/openapi": "^1.4.14",
    "@elysiajs/static": "^1.4.7",
    "@jahonbozor/logger": "workspace:*",
    "@jahonbozor/schemas": "workspace:*",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "@sinclair/typemap": "^0.10.1",
    "dayjs": "^1.11.19",
    "elysia": "^1.4.25",
    "elysiajs-sentry": "^1.3.2",
    "pg": "^8.18.0",
    "prisma": "^7.3.0"
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "@types/pg": "^8.16.0",
    "bun-types": "latest",
    "prettier-plugin-prisma": "^5.0.0"
  },
  "types": "src/index.ts",
  "module": "src/index.ts",
  "exports": {
    ".": "./src/index.ts"
  }
}
