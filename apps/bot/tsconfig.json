{
  "compilerOptions": {
    "target": "esnext",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "paths": {
      "@bot/*": ["./src/*"],
      "@backend/generated/*": ["../backend/src/generated/*"]
    },
    "types": ["bun-types"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "test/**/*.ts"]
}
